/**jigsaw.wxss**/
@font-face { 
  font-family: SketchRockwell; /*这里是说明调用来的字体名字*/ 
  src: url(‘SketchRockwell.ttf’); /*这里是字体文件路径*/ 
} 
.obj-hover{
  background-color:rgba(0, 0, 0, 0.1);
  opacity:0.7;

}
.scores-container { 
  float: left;
  text-align: center;
  margin-right:16rpx;

}
.setting-container{
  float: right;
}
.setting{
  width: 50%;
  border: 1px #abc solid;
}
.score-container, .best-container {
  position: relative;
  display: inline-block;
  background: #66CCCC;
  padding: 15px 25px;
  font-size: 25px;
  height: 25px; 
  line-height: 47px;
  font-weight: bold;
  border-radius: 3px;
  color: white;
  text-align: center;
  margin: 8px 0 0 8px;
}
.score-container:after, .best-container:after {
  position: absolute;
  width: 100%;
  top: 10px;
  left: 0;
  text-transform: uppercase;
  font-size: 13px;
  line-height: 13px;
  text-align: center;
  color: #fff;
}
.game-container {
  margin-top: 10rpx;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  border:6rpx solid #abc;
  padding:8rpx;
  border-radius:20rpx;

}
.score-container .score-addition, .best-container .score-addition {
  position: absolute;
  right: 30px;
  color: red;
  font-size: 25px;
  line-height: 25px;
  font-weight: bold;
  color: rgba(119, 110, 101, 0.9);
  z-index: 100;
 
}
.score-container:after {
  content: "Score";
}
.best-container:after {
  content: "Best";
}
.my_CSS3_class { 
  font-family: SketchRockwell; /*这里设置某参数的字体值，在这里是“my_CSS3_class”调用了你刚才声明的字体值"SketchRockwell"*/ 
  font-size: 3.2em; /*这里是字体大小*/ 
} 
.container {
  height: 100%;
  background:rgba(199,237,204,1);
} 

page{
  background-color: #DCDCDC;

}
ad{
  bottom:0em;
