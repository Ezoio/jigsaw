}
.flex-item {
  width: 1.4em;
  height: 1.4em;
  background-color: lightskyblue;
  text-align: center;
  margin: 5rpx;
  font-size: 122rpx;
  border-radius: 10rpx;
  color: rgba(255, 255, 255, 1);
  text-decoration: none;
  font-family: 'Yanone Kaffeesatz';
  font-weight: 700;
  display: block;
  padding: 8rpx;
  box-shadow: 0rpx 9rpx 0rpx rgba(31, 5, 50, 1), 0rpx 9rpx 25rpx rgba(0, 0, 0, 0.7);
}

.flex-item-pressed {
  transition: all 0.1s ease;
  box-shadow: 0px 3px 0px rgba(219, 31, 5, 1), 0px 3px 6px rgba(0, 0, 0, 0.9);
}

